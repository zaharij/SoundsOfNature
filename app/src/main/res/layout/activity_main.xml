<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zahar.soundsofnature.activities.MainActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/listening_btn_eng"
        android:layout_marginLeft="105dp"
        android:layout_marginStart="105dp"
        android:id="@+id/imageButtonListening"
        tools:background="@android:drawable/list_selector_background"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:drawable/list_selector_background"
        android:clickable="false"
        android:layout_centerVertical="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/quiz_btn"
        android:id="@+id/imageButtonQuiz"
        android:background="@android:drawable/menuitem_background"
        android:layout_marginRight="89dp"
        android:layout_marginEnd="89dp"
        android:layout_alignTop="@+id/imageButtonListening"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
